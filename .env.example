POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mpx
POSTGRES_USER=mpx_app
POSTGRES_PASSWORD=please-set-a-strong-password
API_PORT=8080
DATA_SOURCE=mock

TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ADMIN_API_TOKEN=super-strong-admin-token
CORS_ALLOW_ORIGINS=https://your-frontend.example.com
RATE_LIMIT_REQUESTS_PER_MINUTE=120

SERVICE_ROLE=api              # api | ingestor | worker | all (dev)
MARKET_BOOTSTRAP_LIMIT=200
MARKET_MIN_LIQUIDITY=0
MARKET_MIN_VOLUME_24H=0

# Execution / risk defaults
EXEC_MODE=semi_auto
EXEC_MAX_NOTIONAL_PER_ORDER=200
EXEC_MAX_CONCURRENT_ORDERS=2
EXEC_MAX_DAILY_NOTIONAL=1000
EXEC_SLIPPAGE_BPS=80

ML_ENABLED=true
ML_MODEL_PATH=models/gboost_latest.pkl
ML_CONFIDENCE_THRESHOLD=0.20
ML_INFERENCE_INTERVAL_SECS=5.0
ML_FUSION_RULE_BONUS=20.0

# Disable HF downloads inside containers to avoid SSL/retry noise
HF_HUB_OFFLINE=1

PYTHONPATH=/app/vendor
